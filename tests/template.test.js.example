6.  wrapper.trigger('click')    // Click simulieren
7.  wrapper.emitted('event')    // Event geprüft? 
8.  wrapper.classes()           // CSS Klassen
9.  wrapper.vm                  // Vue Internals
10. wrapper.props('name')       // Prop Wert

